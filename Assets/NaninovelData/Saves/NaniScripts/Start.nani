@back Street id:Main
@spawn GameController

#namePick
Lucy: "What's your name?"
@input PlayerName
@stop

Lucy: "Your name is {PlayerName}?"

@choice "Yes"
@choice "No" goto:.namePick
@stop

Lucy: "Well then, {PlayerName}..."

@setLocationScript location:"Basement" scriptName:"Chapter1"
@showUI MapUI
@hidePrinter Dialogue
@stop